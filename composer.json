{
	"name": "mediawiki/mediawiki-phan-config",
	"description": "Standard MediaWiki phan configuration",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/Continuous_integration/Phan",
	"authors": [
		{
			"name": "MediaWiki developers",
			"email": "wikitech-l@lists.wikimedia.org"
		}
	],
	"require": {
		"php": ">=8.1.0",
		"phan/phan": "6.0.1",
		"mediawiki/phan-taint-check-plugin": "9.0.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "50.0.0",
		"mediawiki/minus-x": "2.0.1",
		"ockcyp/covers-validator": "1.7.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "10.5.63"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phpcs": "phpcs -sp"
	},
	"autoload": {
		"psr-4": {
			"MediaWikiPhanConfig\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
